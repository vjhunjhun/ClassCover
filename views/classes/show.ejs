<%layout("/layouts/boilerplate.ejs")%>
    <div class="row mt-3" >
            <div class="col-8 offset-2" >
    <h3>Class Details</h3>
    </div>
            <div class="card col-6 offset-3 show-card">
                 <div class="card-body">

            <p class="card-text">Subject: <b><%=c.subject%></b></p>
            <p class="card-text">Assigned Teacher: <%=c.originalTeacher%></p>
            <p class="card-text">Time: <%=c.time%></p>
            <p class="card-text">Room:<%=c.room%></p>
            <p class="card-text">Status:<%=c.status%></p>
            <p class="card-text">Claimed by:<%=c.claimedBy || "Not yet claimed"%></p>
            <p class="card-text">Created by: <%=c.createdBy.username%></p>
        </div>
            </div>
            <br>
            <%if(currUser && currUser._id.equals(c.createdBy._id)){%>
            <div class="btns">
                <a href="/classes/<%=c._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
                <form action="/classes/<%=c._id%>?_method=delete" method="post">
                    <button class="btn btn-dark offset-5">Delete</button>
                </form>
            </div>
            <%}%>
            <div class="chats">
                <%if(currUser){%>
                <hr>
                <h4>Chat Here</h4>
                <form action="/classes/<%=c._id%>/chats" method="POST" novalidate class="needs-validation">
                    <div class="mb-3 mt-3">
                        <label for="chat" class="form-label">Chats</label>
                        <textarea name="chat[msg]" id="chat" class="form-control" required></textarea>
                        <div class="valid-feedback">Chat is ok.</div>
                        <div class="invalid-feedback">please write something!!</div>
                    </div>
                    <button class="btn btn-primary">Add</button>
                </form>
                <hr>
                <%}%>
                <p><b>All Chats</b></p>
                <div class="row">
                    <%if(!c.chats.length){%>
                        <p>No Chats</p>
                    <%}%>
                    <%for(chat of c.chats){%>
                    <div class="card mb-3 ms-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="card-title">@<%=chat.author.username%></h5>
                                <p class="card-text ms-3 text-muted"><%=chat.createdAt.toLocaleTimeString()%></p>
                            </div>
                            <p class="card-text ms-3 mt-2"><%=chat.msg%></p>
                        </div>
                        <%if(currUser && currUser._id.equals(chat.author._id)){%>
                        <form action="/classes/<%=c._id%>/chats/<%=chat._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-outline-dark mb-1">Delete</button>
                        </form>
                            <%}%>
                    </div>
                <%}%>
                </div>
            </div>
    </div>
